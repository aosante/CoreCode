@using CoreCode.Web.UI.Models.Helpers
<script src="~/Scripts/CoreCodeScripts/Common/LoginComponent.js"></script>
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Ingresar</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form mb-5">
                    <i class="fas fa-envelope prefix grey-text mb-2" style="color: grey; font-size: 1.3em"></i>
                    <label data-error="wrong" data-success="right" for="defaultForm-email">Correo</label>
                    <input type="text" id="userName" class="form-control validate mb-2">
                </div>

                <div class="md-form mb-4">
                    <i class="fas fa-lock prefix grey-text mb-2" style="color: grey; font-size: 1.3em"></i>
                    <label data-error="wrong" data-success="right" for="defaultForm-pass">Contraseña</label>
                    <input type="password" id="loginPassword" class="form-control validate mb-2">
                </div>

            </div>
            <div class="modal-footer d-flex justify-content-center">
                @Html.GetButton("loginButton", "loginEvent", "LoginComponent", string.Empty, "btn", "regular-btn", "Iniciar Sesión")
                @Html.GetButton("btnRecover", "recoverPasswordEvent", "LoginComponent", string.Empty, "btn","regular-btn", "Recuperar Contraseña")
            </div>
        </div>
    </div>
</div>

